<div id="main-content" class="containers">
  <div class="page-container">

    <div id="sidebar" class="col-sm-4 sidebar sidebar-container">

      <div id="info_row" class="sidebar-information">
          <div class="d-flex">
            <div class="record-sidebar-title information flex-grow-1">
              <%= render partial: 'shared/idbadge', locals: {:result => @result, :props => { :full => true} } %>
            </div>
            <div class="page_actions">
              <%= render partial: 'shared/page_actions', locals: {:record => @result, :title => @result.display_string, :url => request.fullpath } %>
            </div>
          </div>
      </div>

      <% unless @results.blank? || @results['total_hits'] == 0 || @facets.blank? %>
        <%= render partial: 'shared/facets' %>
      <% end %>

    </div>

      <div class="row right-side">
        <div class="information everything-wrapper">
          <% currentUrl = request.original_url %>
          <% urlArray = currentUrl.split("/") %>
          <% if urlArray[5]=='top_containers' %>
            <div id="alert-row" class="col-12">
                <% if urlArray[4]=='5' %>
                    <div id="spec_request">
                        <p>To request boxes, please submit the collection, series, and box number(s) via the Special Collection Research Center's <a target="_blank" href="https://library.gwu.edu/scrc/contact">Contact form</a>.</p>
                    </div>
                <% elsif urlArray[4]=='3' %>
                    <div id="spec_request">
                        <p>To request boxes, please contact the <a target="_blank" href="https://library.gwu.edu/grc">Global Resources Center</a>.</p>
                    </div>
                <% end %>
            </div>
          <% end %>

        <div class="row">
          <div class="everything-wrapper">

            <div class="staff-hidden d-none">
              <% if @result['json']['restricted'] %>
                <p><h4 class='restricted'><%= I18n.t('top_container.restricted') %></h4></p>
              <% end %>
            </div>

            <% unless @results.blank? || @results['total_hits'] == 0 %>
              <h2><%= t('contains', {:count => @results['total_hits'], :type => @results['total_hits'] == 1? t('search_results.result') : t('search_results.results')}) %>:</h2>
              <div>
                <% @results.records.each do |result| %>
                  <%= render partial: 'shared/result', locals: {:result => result, :props => {:full => false}} %>
                <% end %>
              </div>
                <div id="pagination-bottom">
                  <%= render partial: 'shared/pagination', locals: {:pager  => @pager}  %>
                </div>
            <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
